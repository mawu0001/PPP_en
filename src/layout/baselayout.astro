---
import "../styles/global.css";
import Header from "../components/Header.astro";

// import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Marie Wulff</title>

    <link
      href="https://api.fontshare.com/v2/css?f[]=switzer@400,401,500,600,700,900&f[]=array@400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <!-- <Footer /> -->
  </body>

  <style>
    @layer global {
      body {
        /* --content-width: 65rem; */

        --fill: minmax(0, 1fr);
        --elements: minmax(0, 4rem);
        --content-width: minmax(0, 65rem);

        display: grid;
        grid-template-columns:
          [full-start] var(--fill)
          [elements-start] var(--elements)
          [content-start] var(--content-width)
          [content-end] var(--elements)
          [elements-end] var(--fill)
          [full-end];

        > *,
        * > .full-bleed {
          grid-column: full;
          display: grid;
          grid: auto / subgrid;

          > :not(&) {
            grid-column: content;
          }
        }

        section {
          margin-bottom: var(--space-3xl);
        }
      }
    }
  </style>
</html>
